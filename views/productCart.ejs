<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/6bd1af9c32.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="css/styles.css" />
    <title>Tienda Org√°nica</title>
  </head>
  <body>
    
    <%- include('./partials/header') %>

    <main>
      <section>
        <article class="carrito-compras">
          <h1 class="titulo">Detalle de tu carrito</h1>
          <div class="seccion carrito">
            <div>
              <h3 class="seccion">Producto</h3>
            </div>
            <div>
              <h3 class="seccion"><label>Cantidad</label></h3>
            </div>
            <div>
              <h5>
                <select class="cant" name="can">
                  <option>1</option>
                  <option>2</option>
                  <option>3</option>
                  <option>4</option>
                  <option>5</option>
                </select>
              </h5>
            </div>

            <div>
              <h3 class="seccion">Precio</h3>
            </div>
            <div>
              <h3 class="seccion">Subtotal</h3>
            </div>
            <div>
              <h3 class="seccion">Eliminar</h3>
            </div>
            <div class="check">
              <input type="checkbox" />
            </div>
          </div>
          <div class="total">
            <h1>Total:$0.00</h1>
          </div>
          <div class="finalizar">
            <div class="seguir">
              <button type="submit">Seguir comprando</button>
            </div>
            <div class="confirmar">
              <button type="submit">Confirmar pedido</button>
            </div>
          </div>
        </article>
      </section>
      <div class="iconocarro">
        <i class="fas fa-shopping-cart"></i>
      </div>
    </main>

    <%- include('./partials/footer') %>

    <script src="js/script.js"></script>
  </body>
</html>
